{
  "builders": [
    {
      "type": "hyperv-iso",
      "vm_name": "{{ user `vm_name` }}-dck",
      "temp_path": ".",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "disk_size": "{{user `disk_size`}}",
      "disk_additional_size": "{{user `disk_additional_size`}}",
      "disk_block_size": "1",
      "communicator": "ssh",
      "ssh_username": "root",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout" : "4h",
      "shutdown_timeout": "30m",
      "shutdown_command": "echo 'password' | sudo -S shutdown -P now",
      "memory": 4096,
      "enable_dynamic_memory": "true",
      "cpus": 4,
      "generation": 2,
      "switch_name": "{{user `switch_name`}}",
      "vlan_id": "{{user `vlan_id`}}",
      "http_directory": "./extra/files",
      "boot_wait": "5s",
      "boot_command": [
      "{{ user `boot_command` }}"
      ],
      "guest_additions_mode":"disable",
      "enable_secure_boot": false,
      "output_directory": "{{ user `output_directory` }}-dck"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "extra/files/gen2-linux/ansible.sh",
      "destination": "/tmp/ansible.sh"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
      "chmod +x /tmp/ansible.sh",
      "/tmp/ansible.sh -i true"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
    },
    {
      "type": "file",
      "source": "extra/playbooks/provision_alma8_variables.yml",
      "destination": "/tmp/variables.yml"
    },
    {
      "type": "file",
      "source": "{{user `ansible_override`}}",
      "destination": "/tmp/override.yml"
    },
    {
      "type": "file",
      "source": "extra/files/gen2-linux/prepare_neofetch.sh",
      "destination": "/tmp/prepare_neofetch.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "extra/playbooks/provision_centos.yaml",
      "extra_arguments": ["-e","@/tmp/variables.yml","-e","@/tmp/override.yml"]
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
      "chmod +x /tmp/ansible.sh",
      "/tmp/ansible.sh -i false"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
    },
    {
      "type": "file",
      "source": "extra/files/gen2-almalinux8/uefi.sh",
      "destination": "/usr/local/bin/uefi.sh"
    },
    {
      "type": "file",
      "source": "extra/files/scagent/1.0.3.1028/scvmmguestagent.1.0.3.1028.x64.tar",
      "destination": "/tmp/scvmmguestagent.1.0.3.1028.x64.tar"
    },
    {
      "type": "file",
      "source": "extra/files/scagent/1.0.3.1028/install",
      "destination": "/tmp/install"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
      "chmod +x /tmp/install",
      "sh /tmp/install \"$(ls /tmp/scvmm*.x64.tar)\"",
      "reboot"
      ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell",
    "expect_disconnect": true
    },
    {
      "type": "file",
      "source": "extra/files/gen2-linux/zeroing.sh",
      "destination": "/tmp/zeroing.sh"
    },
    {
     "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
      "echo Last Phase",
      "chmod +x /usr/local/bin/uefi.sh",
      "systemctl set-default multi-user.target",
      "/bin/rm -f /etc/ssh/*key*",
      "chmod +x /tmp/zeroing.sh",
      "/tmp/zeroing.sh",
      "/bin/rm -rfv /tmp/*"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell",
    "pause_before": "30s"
    }
  ],
  "variables": {
    "iso_url":  "",
    "iso_checksum_type": "none",
    "iso_checksum": "",
    "switch_name": "",
    "vm_name": "",
    "disk_size": "70000",
    "vlan_id": "",
    "output_directory": "",
    "ssh_password": "",
    "provision_script_options": "",
    "boot_command": "",
    "ansible_override": ""
  }
}